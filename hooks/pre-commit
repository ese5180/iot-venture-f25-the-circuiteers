#!/bin/bash
#
# Pre-commit hook for VendGuard project
# Performs quick checks before allowing a commit
#

set -e

echo "ðŸ” Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}Error: Not in a git repository${NC}"
    exit 1
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No staged files to check${NC}"
    exit 0
fi

# Check for common issues in C files
C_FILES=$(echo "$STAGED_FILES" | grep -E '\.(c|h)$' || true)

if [ -n "$C_FILES" ]; then
    echo "Checking C source files..."
    
    # Check for TODO/FIXME comments (warn only)
    if echo "$C_FILES" | xargs grep -n "TODO\|FIXME" 2>/dev/null; then
        echo -e "${YELLOW}âš  Warning: Found TODO/FIXME comments${NC}"
    fi
    
    # Check for basic syntax issues (very basic check)
    for file in $C_FILES; do
        if [ -f "$file" ]; then
            # Check for unclosed braces (basic check)
            open_braces=$(grep -o '{' "$file" | wc -l)
            close_braces=$(grep -o '}' "$file" | wc -l)
            if [ "$open_braces" -ne "$close_braces" ]; then
                echo -e "${YELLOW}âš  Warning: Possible brace mismatch in $file${NC}"
            fi
        fi
    done
fi

# Check for large files
LARGE_FILES=$(echo "$STAGED_FILES" | xargs ls -lh 2>/dev/null | awk '$5+0 > 10485760 {print $9}' || true)
if [ -n "$LARGE_FILES" ]; then
    echo -e "${YELLOW}âš  Warning: Large files detected (>10MB)${NC}"
    echo "$LARGE_FILES"
fi

# Check for merge conflict markers
CONFLICT_MARKERS=$(echo "$STAGED_FILES" | xargs grep -l "<<<<<<< HEAD\|=======\|>>>>>>>" 2>/dev/null || true)
if [ -n "$CONFLICT_MARKERS" ]; then
    echo -e "${RED}âœ— Error: Merge conflict markers found in staged files${NC}"
    echo "$CONFLICT_MARKERS"
    exit 1
fi

# Check for trailing whitespace (warn only)
TRAILING_WS=$(echo "$STAGED_FILES" | xargs grep -l "[[:space:]]$" 2>/dev/null || true)
if [ -n "$TRAILING_WS" ]; then
    echo -e "${YELLOW}âš  Warning: Trailing whitespace found in:${NC}"
    echo "$TRAILING_WS"
fi

echo -e "${GREEN}âœ“ Pre-commit checks passed${NC}"
exit 0

